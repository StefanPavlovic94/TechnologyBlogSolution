@model TechnologyBlogSolution.ViewModels.SubjectModels.EditSubjectView

@{
    ViewBag.Title = "EditSubject";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div row>
        <h4>EditSubjectView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <textarea name="Description" class="form-control" style="margin-left:1%; max-width:100%; padding-left:0%; width:100%" cols="150" rows="10">@Model.Description</textarea>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
